# Prefer latest stable versions within declared semver ranges across the workspace
save-exact=false
save-prefix=^

# Resolve to highest versions that satisfy semver ranges (including transitive deps)
resolution-mode=highest

# Workspace-friendly defaults
shared-workspace-lockfile=true
prefer-workspace-packages=true

# Ease peer dep installs across ecosystem
auto-install-peers=true
strict-peer-dependencies=false

# Help with tools expecting hoisted bins/plugins
shamefully-hoist=true
